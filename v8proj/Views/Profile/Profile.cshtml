

@{
    ViewBag.Title = "Профиль";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container mx-auto px-4 py-8">
    <div class="bg-white rounded-lg shadow-lg overflow-hidden max-w-4xl mx-auto">
        <div class="p-8">
            <div class="flex items-center space-x-6">
                <div class="w-32 h-32 rounded-full overflow-hidden">
                    <img src="/path/to/logo.jpg" alt="Логотип профиля" class="w-full h-full object-cover"/>
                </div>
                <div class="flex-1">
                    <h1 class="text-3xl font-bold mb-2">Имя пользователя</h1>
                    <p class="text-gray-600 mb-2">email@example.com</p>
                    <span class="inline-block px-3 py-1 bg-green-100 text-green-800 rounded-full text-sm">Активный</span>
                </div>
            </div>

            <div class="mt-8">
                <div class="flex justify-between items-center mb-6">
                    <h2 class="text-2xl font-bold">Мои альбомы</h2>
                    <button class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 transition">
                        Добавить альбом
                    </button>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                    <div class="bg-gray-100 rounded-lg p-4 text-center">
                        <p class="text-gray-500">Альбомов пока нет</p>
                    </div>
                </div>
                
                    <a href="@Url.Action("SignOut", "Auth")" type="submit" class="bg-red-600 text-white px-4 py-2 rounded hover:bg-red-700 transition">
                        Выход
                    </a>
                
            </div>
        </div>
    </div>
</div>

