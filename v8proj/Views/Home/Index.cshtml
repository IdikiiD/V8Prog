@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model List<v8proj.Web.Model.eUseControl>

<div class="container mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold mb-8 text-center">Наши автомобили</h1>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        @foreach (var car in Model)
        {
            <div class="bg-white rounded-lg shadow-lg overflow-hidden">
                <img src="@car.CartImage"
                     alt="@car.CartName"
                     class="w-full h-48 object-cover"/>

                <div class="p-6">
                    <h2 class="text-xl font-bold mb-2">@car.CartName</h2>
                    <p class="text-gray-600 mb-4">@car.CartDescription</p>
                    <div class="flex justify-between items-center">
                        <span class="text-2xl font-bold">$@car.CartPrice</span>
                        <a href="#"
                           class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 transition">
                            Подробнее
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
