@model v8proj.Core.Model.DTO.User.SignUpDto

@{
    ViewBag.Title = "Регистрация";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main class="container mx-auto px-4 py-8">
    <div class="max-w-md mx-auto bg-white rounded-lg shadow-md p-8">
        <h2 class="text-2xl font-bold mb-6 text-center text-black">Регистрация</h2>

        @if (TempData["Error"] != null)
        {
            <div class="text-red-600 text-center mb-4">@TempData["Error"]</div>
        }

        @using (Html.BeginForm("SignUp", "Auth", FormMethod.Post, new { @class = "space-y-4" }))
        {
            <div>
                <label class="block text-gray-700 mb-2" >Имя</label>
                @Html.TextBoxFor(m => m.FullName, new { @class = "w-full px-4 py-2 border rounded-lg focus:outline-none focus:border-black", @placeholder = "Имя", @required = "required" })
                @Html.ValidationMessageFor(m => m.FullName, "", new { @class = "text-red-600 text-sm" })
            </div>

            <div>
                <label class="block text-gray-700 mb-2" >Email</label>
                @Html.TextBoxFor(m => m.Email, new { @class = "w-full px-4 py-2 border rounded-lg focus:outline-none focus:border-black", @placeholder = "Email", @type = "email", @required = "required" })
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-red-600 text-sm" })
            </div>

            <div>
                <label class="block text-gray-700 mb-2" >Пароль</label>
                @Html.PasswordFor(m => m.Password, new { @class = "w-full px-4 py-2 border rounded-lg focus:outline-none focus:border-black", @placeholder = "Пароль", @required = "required" })
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-red-600 text-sm" })
            </div>

            <div>
                <label class="block text-gray-700 mb-2" >Подтвердите пароль</label>
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "w-full px-4 py-2 border rounded-lg focus:outline-none focus:border-black", @placeholder = "Подтвердите пароль", @required = "required" })
                @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-red-600 text-sm" })
            </div>

            

            <button type="submit" class="w-full bg-black text-white py-2 rounded-lg hover:bg-gray-800">Зарегистрироваться</button>
        }

        <p class="mt-4 text-center text-gray-600">
            Уже есть аккаунт? <a href="@Url.Action("SignIn", "Home")" class="text-black hover:text-gray-700">Войти</a>
        </p>
    </div>
</main>
