@using v8proj.Core.Constant
@model v8proj.Core.Model.DTO.User.SignInDto

@{
    ViewBag.Title = "Вход";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Форма входа -->
<main class="container mx-auto px-4 py-8">
    <div class="max-w-md mx-auto bg-white rounded-lg shadow-md p-8">
        <h2 class="text-2xl font-bold mb-6 text-center text-black">Вход</h2>

        @if (TempData[TempDataKeys.Error] != null)
        {
            <div class="alert alert-info">@TempData[TempDataKeys.Error]</div>
        }

        @using (Html.BeginForm("SignIn", "Auth", FormMethod.Post, new { @class = "form" }))
        {
            <div>
                @Html.LabelFor(m => m.Email ,  
            new {@class = "block text-dark-700 mb-2"
                })
                @Html.TextBoxFor(m => m.Email, new { @class ="w-full px-4 py-2 border rounded-lg focus:outline-none focus:border-black", @placeholder = "Email", @required = "required" })
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
            </div>
            <div>
                @Html.LabelFor(m => m.Password ,
                    new {@class = "block text-dark-700 mb-2 mt-1.5"
                    })
                @Html.PasswordFor(m => m.Password, new { @class = "w-full px-4 py-2 border rounded-lg focus:outline-none focus:border-black", @placeholder = "Password", @required = "required" })
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
            </div>
            <div class="flex items-center justify-between">
                <div class="flex items-center">
                    </div>
                <a href="@Url.Action("ForgotPassword", "Home")" class="text-black hover:text-gray-700 mb-2 mt-2">Забыли пароль?</a>
            </div>
            <button href="@Url.Action("SignIn","Home")" type="submit" class="w-full bg-black text-white py-2 rounded-lg hover:bg-gray-800">Войти</button>
        }

        <p class="mt-4 text-center text-gray-600">
            Нет аккаунта? <a href="@Url.Action("SignUp", "Home")" class="text-black hover:text-gray-700">Зарегистрироваться</a>
        </p>
    </div>
</main>