<header class="bg-white shadow-md">
    <div class="container mx-auto px-4 py-3 flex items-center justify-between">
        <div class="flex items-center">
            <img src="~/images/car-logo.svg" alt="Logo" class="h-8 w-8 mr-2">
            <h1 class="text-2xl font-bold text-black hover:text-gray-700">V8</h1>
        </div>
        <nav class="flex items-center space-x-6">
            <a href="@Url.Action("Index", "Home")" class="text-black hover:text-gray-700">Каталог</a>
            <a href="@Url.Action("Cart", "Home")" class="text-black hover:text-gray-700">Корзина</a>
            @if (Request.Cookies["UserEmail"] != null)
            {
                <a href="@Url.Action("Profile", "Home")" class="text-black hover:text-gray-700">Профиль</a>
            }
            else
            {
                <a href="@Url.Action("SignIn", "Home")" class="text-black hover:text-gray-700">Вход</a>
            }
            <a href="@Url.Action("Setings", "Home")" class="text-black hover:text-gray-700">Настройки</a>
        </nav>
    </div>
</header>